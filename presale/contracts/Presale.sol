pragma solidity ^0.8.0;

interface IERC20 {
    function decimals() external view returns (uint8);
    function totalSupply() external view returns (uint256);
    function balanceOf(address account) external view returns (uint256);
    function transfer(address recipient, uint256 amount)
        external
        returns (bool);
    function allowance(address owner, address spender)
        external
        view
        returns (uint256);
    function approve(address spender, uint256 amount) external returns (bool);
    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) external returns (bool);
    event Transfer(address indexed from, address indexed to, uint256 value);
    event Approval(
        address indexed owner,
        address indexed spender,
        uint256 value
    );
}

contract PresaleToken {
    using SafeMath for uint256;
    IERC20 public $Pay;
    address public owner;
    uint256 public $PayPrice = 0.01 ether;
    uint256 public totalSoldTokens;
    uint256 public totalParticipants;
    uint256 public presaleEndedTime;
    uint256 public totalDepositedAmount;
    bool public isPresaleEnded;
    mapping(address => uint256) public tokenBalance;
    mapping(address => uint256) public totalTokenBalance;
    mapping(address => uint256) public withdrewBalance;
    mapping(address => bool) private ownerships;

    modifier isOwner(address _user) {
        require(ownerships[_user], "Ownable: caller is not the owner");
        _;
    }
    
    constructor(address _$Pay) {
        $Pay = IERC20(_$Pay);
        owner = msg.sender;
        ownerships[owner] = true;
    }

    function grantOwnership(address _owner) external isOwner(msg.sender) {
        owner  = _owner;
        ownerships[_owner] = true;
    }

    function deposit(uint256 amount) public isOwner(msg.sender) {
        $Pay.transferFrom(msg.sender, address(this), amount);
        totalDepositedAmount += amount;
    }

    function updatePresaleEndStatus(bool _status) public isOwner(msg.sender) {
        isPresaleEnded = _status;
        if (_status == true)
            presaleEndedTime = block.timestamp;
    }

    function setPrice(uint256 _setPrice) public isOwner(msg.sender) {
        $PayPrice = _setPrice;
    }

    function buy$pay(uint256 $payAmount)
        public
        payable
    {
        require(!isPresaleEnded, "Presale ended");
        require(msg.value >= $PayPrice.mul($payAmount), "Insufficient amount.");
        require(totalSoldTokens + $payAmount <= $Pay.balanceOf(address(this)), "Insufficient token amount.");
        $Pay.transfer(msg.sender, $payAmount.mul(10**$Pay.decimals()));
        if (tokenBalance[msg.sender] == 0) {
            totalParticipants++;
        }
        tokenBalance[msg.sender] += $payAmount.mul(10**$Pay.decimals());
        totalTokenBalance[msg.sender] += $payAmount.mul(10**$Pay.decimals());
        totalSoldTokens += $payAmount.mul(10**$Pay.decimals());
    }

    function balancOf() public view returns (uint256) {
        return address(this).balance;
    }

    function withdrawETH() public isOwner(msg.sender) {
        payable(msg.sender).transfer(address(this).balance);
    }

    function withdrawToken() public isOwner(msg.sender) {
        $Pay.transfer(msg.sender, $Pay.balanceOf(address(this)));
    }
}

